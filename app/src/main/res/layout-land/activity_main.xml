<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operando1"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />

        <EditText
            android:id="@+id/operando1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operando2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />

        <EditText
            android:id="@+id/operando2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/rbOpcoes"
            >
            <RadioButton
                android:id="@+id/rbSoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soma"
                />

            <RadioButton
                android:id="@+id/rbSubtracao"
                android:layout_width="106dp"
                android:layout_height="33dp"
                android:text="@string/subtracao"
                />

            <RadioButton
                android:id="@+id/rbDivisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/divisao"
                />

            <RadioButton
                android:id="@+id/rbMultiplicacao"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:text="@string/multiplicacao"
                />
        </RadioGroup>

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="cliqueBotao"
            android:text="@string/calcular" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
</LinearLayout>